@import '../../styles/colors'

.title
  color $lightAccent

  &.title-uppercase
    text-transform uppercase

  &:after
    content ''
    position absolute
    width calc(100% - 3rem)
    height .1rem
    margin-top .5rem

  &.title-underlined:after
    background: linear-gradient(to right, rgba($brand, 0) 0%, rgba($brand, .3) 4%, rgba($brand, 0) 80%)
