@import '../../styles/colors'

.title
  color $lightAccent

  &.title-uppercase
    text-transform uppercase

  &.title-underlined:after
    content ''
    position absolute
    width calc(100% - 3rem)
    height .1rem
    margin-top .5rem

    background: linear-gradient(to right,
      rgba($brand, 0) 0%,
      rgba($brand, .3) 1%,
      rgba($brand, .3) 99%,
      rgba($brand, 0) 100%
    )
