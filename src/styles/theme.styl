@import './colors'
@import './vars'

*,
*:after,
*:before
  box-sizing inherit

html
  box-sizing border-box
  font-size 62.5%

body
  color $textColor
  background-color $backgroundColor
  font-family 'Roboto', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
  font-size 1.6em
  font-weight 300
  letter-spacing .04em
  line-height 1.6

blockquote
  border-left 0.3rem solid $blockquoteBorderColor
  margin-left 0
  margin-right 0
  padding 1rem 1.5rem
  *:last-child
    margin-bottom 0

.button
  background-color $buttonBackground
  border 0.1rem solid $buttonBorder
  border-radius .4rem
  color $buttonText
  cursor pointer
  display inline-block
  font-size 1.1rem
  font-weight 700
  height 4rem
  letter-spacing .1rem
  line-height 4rem
  padding 0 1.5rem
  text-align center
  text-decoration none
  text-transform uppercase
  transition all 100ms ease-in
  white-space nowrap

.button:focus,
.button:hover
  background-color $buttonBackgroundHover
  border-color $buttonBorderHover
  color $buttonTextHover
  outline 0

.button[disabled]
  cursor not-allowed
  opacity .5

.button[disabled]:focus,
.button[disabled]:hover
  color $buttonTextDisabled
  background-color $buttonBackgroundDisabled
  border-color $buttonBackgroundDisabled

.button.button-outline
  background-color transparent
  color $buttonOutlineText

.button.button-outline:focus,
.button.button-outline:hover
  background-color transparent
  border-color $buttonOutlineBorderHover
  color $buttonOutlineTextHover

.button.button-outline[disabled]:focus,
.button.button-outline[disabled]:hover
  border-color inherit
  color $buttonOutlineTextDisabled

.button.button-clear
  background-color transparent
  border-color transparent
  color $buttonClearText

.button.button-clear:focus,
.button.button-clear:hover
  background-color transparent
  border-color transparent
  color $buttonClearTextHover

.button.button-clear[disabled]:focus,
.button.button-clear[disabled]:hover
  color $buttonClearTextDisabled

.button.button-success.button-outline
  background-color transparent
  border-color $lightestGrey
  color $buttonSuccessOutlineText

.button.button-success.button-outline:focus,
.button.button-success.button-outline:hover
  background-color transparent
  border-color $buttonSuccessOutlineBorderHover
  color $buttonSuccessOutlineTextHover

.button.button-success.button-outline[disabled]:focus,
.button.button-success.button-outline[disabled]:hover
  border-color inherit
  color $buttonSuccessOutlineTextDisabled

.button.button-danger.button-outline
  background-color transparent
  border-color $lightestGrey
  color $buttonDangerOutlineText

.button.button-danger.button-outline:focus,
.button.button-danger.button-outline:hover
  background-color transparent
  border-color $buttonDangerOutlineBorderHover
  color $buttonDangerOutlineTextHover

.button.button-danger.button-outline[disabled]:focus,
.button.button-danger.button-outline[disabled]:hover
  border-color inherit
  color $buttonDangerOutlineTextDisabled

.input-group
  .input:first-child,
  .input:first-child  .react-select__control
    border-top-left-radius 4px
    border-bottom-left-radius 4px

  .input:last-child,
  .input:last-child .react-select__control
    border-top-right-radius 4px
    border-bottom-right-radius 4px
    border-right-width 1px

  .input,
  .input .react-select__control
    border-radius 0
    border-right-width 0

code
  background $codeBackground
  border-radius .4rem
  font-size 86%
  margin 0 .2rem
  padding .2rem .5rem
  white-space nowrap

pre
  background $preBackground
  border-left 0.3rem solid $preBorderColor
  overflow-y hidden
  & > code
    border-radius 0
    display block
    padding 1rem 1.5rem
    white-space pre

hr
  border 0
  border-top 0.1rem solid $hrColor
  margin 3.0rem 0

input[type='email'],
input[type='number'],
input[type='password'],
input[type='search'],
input[type='tel'],
input[type='text'],
input[type='url'],
textarea
  -webkit-appearance none
  appearance none
  background-color $inputBackground
  border 0.1rem solid $inputBorder
  color $inputText
  transition border-color 200ms linear
  border-radius .4rem
  box-shadow none
  box-sizing inherit
  height 4rem
  padding .6rem 1.0rem
  width 100%
  font-size 1.4rem
  font-weight 100

input[type='email']:focus,
input[type='number']:focus,
input[type='password']:focus,
input[type='search']:focus,
input[type='tel']:focus,
input[type='text']:focus,
input[type='url']:focus,
textarea:focus,
input[type='email']:hover,
input[type='number']:hover,
input[type='password']:hover,
input[type='search']:hover,
input[type='tel']:hover,
input[type='text']:hover,
input[type='url']:hover,
textarea:hover
  border-color $inputBorderFocus
  outline 0

textarea
  min-height 6.5rem

label,
legend
  display block
  font-size 1.6rem
  font-weight 100
  margin-bottom .5rem

fieldset
  border-width 0
  padding 0

input[type='checkbox'],
input[type='radio']
  display inline

.label-inline
  display inline-block
  font-weight normal
  margin-left .5rem

.container
  margin 0 auto
  max-width 112.0rem
  padding 0 2.0rem
  position relative
  width 100%

.row
  display flex
  flex-direction row
  padding 0
  width 100%
  &.row-no-padding
    padding 0
    & > .column
      padding 0
  &.row-wrap
    flex-wrap wrap
  &.row-top
    align-items flex-start
  &.row-bottom
    align-items flex-end
  &.row-center
    align-items center
  &.row-stretch
    align-items stretch
  &.row-baseline
    align-items baseline
  .column
    display block
    flex 1 1 auto
    max-width 100%
    width 100%
    & + .column
      margin-left $border-width
    &.column-offset-10
      margin-left 10%
    &.column-offset-20
      margin-left 20%
    &.column-offset-25
      margin-left 25%
    &.column-offset-50
      margin-left 50%
    &.column-offset-75
      margin-left 75%
    &.column-offset-80
      margin-left 80%
    &.column-offset-90
      margin-left 90%
    &.column-10
      flex 0 0 10%
      max-width 10%
    &.column-20
      flex 0 0 20%
      max-width 20%
    &.column-25
      flex 0 0 25%
      max-width 25%
    &.column-40
      flex 0 0 40%
      max-width 40%
    &.column-50
      flex 0 0 50%
      max-width 50%
    &.column-60
      flex 0 0 60%
      max-width 60%
    &.column-75
      flex 0 0 75%
      max-width 75%
    &.column-80
      flex 0 0 80%
      max-width 80%
    &.column-90
      flex 0 0 90%
      max-width 90%
    .column-top
      align-self flex-start
    .column-bottom
      align-self flex-end
    .column-center
      grid-row-align center
      align-self center

.row .column.column-offset-33, .row .column.column-offset-34
  margin-left 33.3333%

.row .column.column-offset-66, .row .column.column-offset-67
  margin-left 66.6666%

.row .column.column-33, .row .column.column-34
  flex 0 0 33.3333%
  max-width 33.3333%

.row .column.column-66, .row .column.column-67
  flex 0 0 66.6666%
  max-width 66.6666%

