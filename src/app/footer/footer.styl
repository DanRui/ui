@import '../../styles/colors'
@import '../../styles/vars'

.footer
  position relative
  margin-left $border-width
  width 100%
  height 30rem
  overflow hidden
  transition height 150ms ease-in 0ms
  background-color $cardBackground

  .toggler-wrapper
    display flex
    justify-content flex-end
    align-items center
    height 4.5rem
    position absolute
    padding-left 1rem
    padding-right 1rem
    top 0
    width 100%
    font-size 1.4rem
    font-weight 400
    color $fadedText
    z-index 1

    .toggler
      cursor pointer

  &.closed
    height 4.5rem
    transition height 150ms ease-out 400ms
    
    .card.card-large .inner-footer
      box-shadow inset 0 0 0 0 rgba(black, 0.4)
      background-color rgba(black, 0)
      transition background-color 150ms ease-out 50ms, box-shadow 150ms ease-out 100ms

      .footer-logs
        opacity 0
        transition opacity 150ms ease-out 0ms

  .card.card-large
    padding-top 4.5rem
    height 100%
    margin 0

    .inner-footer
      display flex
      flex-direction column
      justify-content flex-end
      padding 1rem
      height "calc(100% - %s)" % $border-width
      width 100%
      box-shadow inset 0 0 .8rem .4rem rgba(black, 0.4)
      border-radius .4rem
      background-color rgba(black, 0.1)
      transition box-shadow 150ms ease-in 200ms, background-color 150ms ease-in 250ms

      .footer-logs
        opacity 1
        transition opacity 150ms ease-in 300ms
        overflow auto
