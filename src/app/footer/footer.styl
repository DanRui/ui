@import '../../styles/colors'
@import '../../styles/vars'

.footer
  position relative
  margin-left 1px
  width 100%
  height 300px
  overflow hidden
  transition height 150ms ease-in 0ms

  .toggler-wrapper
    display flex
    justify-content flex-end
    align-items center
    height 30px
    position absolute
    padding-left 10px
    padding-right 10px
    top 0
    width 100%
    font-size 1.4rem
    font-weight 500
    color $fadedText

    .toggler
      cursor pointer

  &.closed
    height 30px
    transition height 150ms ease-out 400ms
    
    .card.card-large .inner-footer
      box-shadow inset 0 0 0 0 rgba(black, 0.4)
      background-color rgba(black, 0)
      transition background-color 150ms ease-out 50ms, box-shadow 150ms ease-out 100ms

      .footer-logs
        opacity 0
        transition opacity 150ms ease-out 0ms

  .card.card-large
    padding-top 30px
    height 100%
    margin 0

    .inner-footer
      display flex
      flex-direction column
      justify-content flex-end
      padding 10px
      height calc(100% - 1px)
      width 100%
      box-shadow inset 0 0 8px 4px rgba(black, 0.4)
      border-radius 4px
      background-color rgba(black, 0.1)
      transition box-shadow 150ms ease-in 200ms, background-color 150ms ease-in 250ms
      overflow auto

      .footer-logs
        opacity 1
        transition opacity 150ms ease-in 300ms

