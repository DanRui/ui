@import '../../styles/colors'
@import '../../styles/vars'

.home
  display flex
  flex-grow 1
  flex-direction column

  .home-top,
  .home-center,
  .home-bottom
    margin-top $border-width
    display flex

  .home-top,
  .home-header
    height 90px + $border-width

  .home-center
    height 300px

  .home-bottom
    flex-grow 1

  .home-split
    flex 50%
    display flex
  
  .home-item
    margin-left $border-width
    background-color $cardBackground
    flex-grow 1
    padding 10px

    &.home-item-25
      flex 25%

    &.home-item-50
      flex 50%

    &.home-item-75
      flex 75%
